<%- model_class = Sign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:dir) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:mod) %></th>
      <th><%= model_class.human_attribute_name(:mod_dir) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @sign.id %></td>
        <td><%= @sign.dir %></td>
        <td><%= @sign.name %></td>
        <td><%= @sign.mod %></td>
        <td><%= @sign.mod_dir %></td>
        <td><%= @sign.quantity %></td>
        <td><%= number_to_currency(@sign.price) %></td>
        <td>
        </td>
      </tr>
  </tbody>
</table>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:location_id) %>:</strong></dt>
  <dd><%= @location.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @sign.created_at.localtime.strftime("%I:%M %P on %m-%d-%Y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%= @sign.updated_at.localtime.strftime("%I:%M %P on %m-%d-%Y") %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              signs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sign_path(@sign), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sign_path(@sign),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
