<%= form_for @sign, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :dir, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dir, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mod, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mod, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mod_dir, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mod_dir, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :quantity, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                signs_path, :class => 'btn' %>
  </div>
<% end %>
