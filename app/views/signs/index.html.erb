<%- model_class = Sign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:dir) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:mod) %></th>
      <th><%= model_class.human_attribute_name(:mod_dir) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @signs.each do |sign| %>
      <tr>
        <td><%= link_to sign.id, sign_path(sign) %></td>
        <td><%= sign.dir %></td>
        <td><%= sign.name %></td>
        <td><%= sign.mod %></td>
        <td><%= sign.mod_dir %></td>
        <td><%= sign.quantity %></td>
        <td><%= sign.price %></td>
        <td><%= sign.location_id %></td>
        <td><%=l sign.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sign_path(sign), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sign_path(sign),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @location.nil? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sign_path,
            :class => 'btn btn-primary' %>
<% else %>
<%= link_to t('.new', :default => t("helpers.links.new")), "#{@location.name.downcase}/new", class: 'btn btn-primary' %>
<% end %>
